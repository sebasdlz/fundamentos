	int factorial (int n);
	{
		int fact=1,n;
		
		for(int i=2;i<=n;i++)
			fact=fact*i;
			return fact;}
	float sumaserie(int n, float x);
	float acum=0,n,x;
	for(int i=1;i<=n;i++)
	{
		acum=acum+powf(x,i*2/factorial((i-1*2+1)));
	}
	return acum;
